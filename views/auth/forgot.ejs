<% layout('layouts/boilerplate') -%>
<div class="container">
  <h1>Forgot Password?</h1>
  <form action="/forgot-password?_method=PUT" method="POST">
    <div class="nes-field">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" class="nes-input" autofocus>
    </div>
    <br>
    <button type="submit" class="nes-btn is-primary">Submit</button>
  </form>
</div>